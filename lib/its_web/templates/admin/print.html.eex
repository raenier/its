<html>
  <head>
    <!--For removal of date and url on printing page-->
    <style>
      @page {
        size: auto;
        margin: 5mm;
      }
      table {
        table-layout: fixed;
        border: solid 1px;
        width: 100%;
      }
      table tr{
        border: solid 1px;
      }
  </style>
  <script type="text/javascript">
    window.onload = function() { window.print(); }
  </script>
  </head>
<body>
<table>
  <thead>
    <tr>
      <th colspan=3>
        ITSeastwestBPO
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td colspan=2>Ticket No#: <%= @ticket.id %></td>
      <td>Date: <%= Date.utc_today() %></td>
    </tr>
    <tr>
      <td colspan=3><hr></td>
    </tr>
    <tr>
      <td colspan=3>DATE CREATED: <%= Date.to_string(@ticket.inserted_at) %></td>
    </tr>
    <tr>
      <td colspan=3>LAST UPDATED: <%= Date.to_string(@ticket.updated_at) %></td>
    </tr>
    <tr>
      <td colspan=3><br></td>
    </tr>
    <tr>
      <td>DEPARTMENT: <%= @ticket.title %> </td>
      <td>
        STATUS:
        <%= case @ticket.status do %>
          <% 1 -> %>
            For Confirmation

          <% 2 -> %>
            On Going

          <% 3 -> %>
            Done

          <% _ -> %>
            Unknown State

        <% end %>
      </td>
      <td>PROGRESS: <%= @ticket.progress %>% </td>
    </tr>
    <tr>
      <td colspan=3>DESCRIPTION: <% @ticket.description %></td>
    </tr>
    <tr>
      <td colspan=3><hr></td>
    </tr>
    <tr>
      <td>DEVICE MODEL: <%= unless is_nil(@ticket.computer), do: @ticket.computer.model, else: "" %></td>
      <td colspan=2>DEVICE USER: <%= unless is_nil(@ticket.computer.user),
        do: @ticket.computer.user.first_name <> " " <> @ticket.computer.user.last_name,
        else: "" %>
    </td>
    </tr>
    <tr>
      <td colspan=3><hr></td>
    </tr>
    <tr>
      <td colspan=3>WORKS DONE: </td>
    </tr>
    <tr>
      <td colspan=3>
        <ul>
          <%= for task <- @ticket.tasks do %>
            <li><%= task.description %> - <%= task.user.first_name %> <%= task.user.last_name %></li>
          <% end %>
        </ul>
      </td>
    </tr>
    <tr>
      <td colspan=3><hr></td>
    </tr>
    <tr><td>REMARKS:</td></tr>
    <tr><td><br><br></td></tr>
    <tr>
      <td colspan=3><hr></td>
    </tr>
    <tr><td>SIGNATURES:</td></tr>
    <tr><td><br></td></tr>
    <tr>
      <td>
        Client: <u><%= @ticket.client.first_name %> <%= @ticket.client.middle_name %> <%= @ticket.client.last_name %></u>
      </td>
      <td colspan=2>
        Tech: <u><%= @ticket.tech.first_name %> <%= @ticket.tech.middle_name %> <%= @ticket.tech.last_name %></u>
      </td>
    </tr>
  </tbody>
</table>
</body>
</html>
